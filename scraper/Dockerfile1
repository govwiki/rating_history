FROM debian:stable

RUN apt update                             \
 && apt install -y --no-install-recommends \
    ca-certificates curl firefox-esr \
     && rm -fr /var/lib/apt/lists/*                \
 && curl -L https://github.com/mozilla/geckodriver/releases/download/v0.31.0/geckodriver-v0.31.0-linux64.tar.gz | tar xz -C /usr/local/bin \
 && apt purge -y ca-certificates curl

RUN apt update && apt install -y xvfb unzip libgconf-2-4 chromium python3 python3-pip

